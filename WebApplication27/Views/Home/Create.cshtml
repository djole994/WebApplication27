


<form action="/Home/Create" method="post">
    <div class="form-group">
        <label for="ime">Ime:</label>
        <input type="text" class="form-control" id="ime" name="ime" required>
    </div>
    <div class="form-group">
        <label for="prezime">Prezime:</label>
        <input type="text" class="form-control" id="prezime" name="prezime" required>
    </div>
    <div class="form-group">
        <label for="pozicijaId">Pozicija:</label>
        <select class="form-control" id="pozicijaId" name="pozicijaId" required>
            <option value="">Odaberite poziciju</option>
            @foreach (var pozicija in ViewBag.Pozicije)
            {
                <option value="@pozicija.PozicijaId">@pozicija.Naziv</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="periodPozicija">Period pozicije:</label>
        <input type="date" class="form-control" id="periodPozicija" name="periodPozicija" required>
    </div>
    <div class="form-group">
        <label for="nadredjeniId">Nadređeni:</label>
        <select class="form-control" id="nadredjeniId" name="nadredjeniId">
            <option value="">Bez nadređenog</option>
            @foreach (var radnik in ViewBag.Radnici)
            {
                <option value="@radnik.RadniciId">@radnik.Ime @radnik.Prezime</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="iznos">Iznos:</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" id="iznos" name="iznos" step="0.01" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj radnika</button>
</form>
